@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>


<h1>Bowler Contact Info @ViewBag.teamName</h1>

<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Init</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var b in Model)
            {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>

            <!--Will add an "Edit" and "Delete" Link for each row-->
            <td>
                <a asp-controller="Home" asp-action="EditBowler"
                   asp-route-bowlerid="@b.BowlerID" class="btn-sm btn-secondary">Edit</a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="Delete"
                   asp-route-bowlerid="@b.BowlerID" class="btn-sm btn-danger">Delete</a>
            </td>
        </tr>
            }
    </tbody>
</table>

<a asp-controller="Home" asp-action="BowlerForm" class="btn btn-success">Add a New Bowler</a>
